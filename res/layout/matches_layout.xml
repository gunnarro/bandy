<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:scrollbars="none" >

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tablePeroidHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tableHeaderPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="6"
                android:background="@color/tbl_background_header"
                android:gravity="center"
                android:text="tbl_blocked_periode"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:id="@+id/tableSelectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tbl_background_header"
            android:gravity="center_horizontal" >

            <Spinner
                android:id="@+id/view_by_spinner"
                android:layout_width="fill_parent"
                android:layout_gravity="left"
                android:layout_span="5"
                android:prompt="@string/spinner_view_by" />

            <ImageButton
                android:id="@+id/refresh_statistic_btn"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:src="@drawable/table_refresh" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowHeaders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tbl_background_header" >

            <TextView
                android:id="@+id/date"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textSize="12dip" 
                android:text="Date" />

            <TextView
                android:id="@+id/starttime"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textSize="12dip" 
                android:text="Start" />
            
            <TextView
                android:id="@+id/hometeam"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textSize="12dip" 
                android:text="Home" />
            
            <TextView
                android:id="@+id/awayteam"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textSize="12dip" 
                android:text="Visitor" />
            
            <TextView
                android:id="@+id/venue"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall" 
                 android:textSize="12dip"
                android:text="Place" />
            <!-- 
            <TextView
                android:id="@+id/referee"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall" 
                android:textSize="12dip"
                android:text="Referee" />
             -->
        </TableRow>
        <!-- Generated team activites rows here -->
    </TableLayout>

</ScrollView>