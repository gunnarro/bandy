<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableLayout
        android:id="@+id/matchTblId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="2dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match type"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/matchTypeTxt"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:inputType="text"
                android:padding="2dip"
                android:text="@string/blank"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageButton
                android:id="@+id/matchSelectTypeBtnId"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:src="@drawable/arrow_right" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="2dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/matchStartDateTxt"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:ems="8"
                android:gravity="center_horizontal"
                android:inputType="date"
                android:padding="2dip"
                android:text="@string/blank"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/matchStartTimeTxt"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:ems="5"
                android:gravity="center_horizontal"
                android:inputType="time"
                android:padding="2dip"
                android:text="@string/blank"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/matchHomeTeamTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageButton
                android:id="@+id/matchSelectHomeTeamBtnId"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:src="@drawable/arrow_right" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Away"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/matchAwayTeamTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageButton
                android:id="@+id/matchSelectAwayTeamBtnId"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:src="@drawable/arrow_right" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/matchVenueTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/blank"
                android:textAppearance="?android:attr/textAppearanceSmall" />

           <ImageButton
                android:id="@+id/matchSelectVenueBtnId"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:src="@drawable/arrow_right" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/referees"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/matchRefereeNameTxt"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:inputType="text"
                android:padding="2dip"
                android:text="@string/blank"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageButton
                android:id="@+id/matchSelectRefereeBtnId"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:src="@drawable/arrow_right" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registered Players"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_blue_light" />

            <EditText
                android:id="@+id/matchRegisteredPlayersTxt"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:inputType="text"
                android:padding="2dip"
                android:text="@string/blank"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageButton
                android:id="@+id/matchRegistrerPlayersBtnId"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:src="@drawable/arrow_right" />
        </TableRow>
    </TableLayout>

</RelativeLayout>